{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "mock": ["./mock"],
      "base-component": ["./src/components/base"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2020",
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/**/*", "mock/*", "ambient/*"],
  "exclude": ["node_modules"]
}
